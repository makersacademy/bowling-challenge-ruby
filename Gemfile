# frozen_string_literal: true

source "https://rubygems.org"

group :test do
  gem 'rspec' # this allows you to run tests and use a TDD approach
  gem 'simplecov', require: false # this checks code coverage in perecentage
  gem 'simplecov-console', require: false # this is a console output formatter
end

group :development, :test do
  gem 'rubocop', '1.20' # this will allow you to autoclean your code
end
